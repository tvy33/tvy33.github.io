function playSong(songTitle) {
  const lyrics = {
    "Let It Be - The Beatles": `When I find myself in times of trouble\nMother Mary comes to me\nSpeaking words of wisdom, let it be...`,
    "Someone Like You - Adele": `I heard that you're settled down\nThat you found a girl and you're married now...`,
    "Shallow - Lady Gaga & Bradley Cooper": `Tell me somethin', girl\nAre you happy in this modern world?...`,
    "Drivers License - Olivia Rodrigo": `I got my driver's license last week\nJust like we always talked about...`
  };

  document.getElementById('lyricsDisplay').textContent = lyrics[songTitle] || "Lyrics not available.";
}
